<div class="container">
	<h1>BURGER BISTRO</h1>
<div class="columns">
	<div class="row">
		
		<ul class="burger-list">
		{{#each burgers}}
			{{#unless this.devoured}}
		  <li class="burger-list">
		  	<div class="card col s4">
		  		<div class="card-content black-text">
			  		<form action="{{this.id}}?_method=PUT" method="POST">
				    <b>{{this.burger_name}}</b>
					<button class="waves-effect waves-light btn"><i class="material-icons">restaurant_menu</i></button>	
				</div>
		  	</div>
		  	
			</form>   
		  </li>
		  {{/unless}}
		{{/each}}
		</ul>
		
	</div>
	<div class="column">
		<h5>EATEN BURGERS</h5>
		<ul class="burger-item">
		{{#each burgers}}
			{{#if this.devoured}}
		  <li class="chip burger-item">
		    {{this.burger_name}}
				<i action="/{{this.id}}?_method=DELETE" method="DELETE" class="close material-icons">close</i>
		  </li>
		  {{/if}}
			{{/each}}
		
		</ul>
	</div>
	
</div>

<div class="input-field">	
	<form action="/" method="POST">
		<input type="text" class="input" placeholder="Enter your burger name" name="name"><br>
		<br>
		<button class="waves-effect waves-red btn"><i class="material-icons right">room_service</i>Order Up! </button>
	</form>
		
</div>	
</div>